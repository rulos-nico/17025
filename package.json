{
  "name": "lab-iso17025-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo para plataforma de laboratorio ISO 17025 con ML/DL",
  "scripts": {
    "dev": "pnpm --filter @lab17025/frontend dev",
    "dev:backend": "pnpm --filter @lab17025/backend dev",
    "dev:all": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "build:frontend": "pnpm --filter @lab17025/frontend build",
    "build:backend": "pnpm --filter @lab17025/backend build",
    "preview": "pnpm --filter @lab17025/frontend preview",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive exec rm -rf node_modules dist",
    "ml:start": "cd apps/ml-service && python main.py",
    "ml:install": "cd apps/ml-service && pip install -r requirements.txt",
    "services:start": "concurrently \"pnpm dev:backend\" \"pnpm ml:start\"",
    "full-stack": "concurrently \"pnpm dev\" \"pnpm dev:backend\" \"pnpm ml:start\""
  },
  "keywords": ["iso17025", "laboratorio", "monorepo", "ml", "document-classification"],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
